<robot name="simple_ball" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <link name="ball_link">
        <visual>
            <geometry>
                <sphere radius="0.02"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.02"/>
            </geometry>
            <surface>
                <friction>
                  <ode>
                    <mu>1</mu>
                    <mu2>1</mu2>
                  </ode>
                </friction>
                <bounce>
                  <restitution coefficient="0"/>
                </bounce>
            </surface>
        </collision>
        <inertial>
            <mass value="0.1"/>
            <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
        </inertial>
    </link>
    <gazebo  reference="ball_link">
        <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so" />
        <material>Gazebo/Blue</material>
        <mu1>5</mu1> <!-- Friction -->
        <mu2>5</mu2>
        <restitution>1</restitution> <!-- Bounciness -->
          <kp>1000000.0</kp> <!-- 正常接触力 -->
          <kd>100.0</kd> <!-- 阻尼系数 -->
          <maxVel>100.0</maxVel> <!-- 最大速度 -->
          <minDepth>0.005</minDepth> <!-- 最小穿透深度，用于计算接触力 -->
          <restitutionCoefficient>0.00000</restitutionCoefficient> <!-- 弹性系数 -->
    </gazebo>
</robot>
